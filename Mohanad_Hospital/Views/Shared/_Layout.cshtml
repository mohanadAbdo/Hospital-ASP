@using Microsoft.AspNetCore.Mvc.Localization
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mohanad_Hospital</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Mohanad_Hospital.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="<link rel=" stylesheet" href" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Mohanad_Hospital</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        @if (User.IsInRole(SD.Admin_Role))
                        {
                        <li class="nav-item dropdown">
                           

                                <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Sections
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">

                                    <a class="dropdown-item" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Index">Clinics</a>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Doctor" asp-action="Index">Doctors</a>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Confirmation" asp-action="Index">Management</a>

                                </div>
                                </li>
                            }
                            <li>
                            <div class="dropdown" >
                                <button type="button"
                                    class="btn btn-primary dropdown-toggle"
                                    data-bs-toggle="dropdown">Localization
                                
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a asp-controller="Home"
                                           asp-action="ChangeLanguage"
                                           asp-route-culture="en-US"
                                           class="dropdown-item">
                                            <i class="flag-icin flag-icon-gb"></i>English

                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="Home"
                                           asp-action="ChangeLanguage"
                                           asp-route-culture="tr-TR"
                                           class="dropdown-item">
                                            <i class="flag-icin flag-icon-gb"></i>Turkish

                                        </a>
                                    </li>


                                </ul>




                            </div>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Mohanad_Hospital - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
