@model DoctorViewModel
<div class="row pb-2">
    <h2 class="text-primary">@(Model.Doctor.Id != 0 ? "Update" : "Create")Doctor</h2>
    <hr />
</div>

<form method="post" class="row" enctype="multipart/form-data">

    <div class="border p-3 mt-4">
        <div class="row">
            <div class="col-10">

                <div class="mb-3 row">
                    <label asp-for="Doctor.DoctorName"></label>
                    <input asp-for="Doctor.DoctorName" class="form-control">
                    <span asp-validation-for="Doctor.DoctorName" class="text-danger"></span>
                </div>
                <div class="mb-3 row">
                    <select asp-for="Doctor.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                        <option disabled selected>Select Category</option>
                    </select>


                </div>
                <div class="mb-3 row">

                    <input type="file" name="file" class="form-control">
                    <label asp-for="Doctor.ImageUrl"></label>
                </div>

                <div class="row">
                    <div class="col-6 col-md-3">
                        @if (Model.Doctor.Id != 0)
                        {
                            <button type="submit" class="btn btn-primary form-control" style="width:150px">Update</button>

                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary form-control" style="width:150px">Create</button>

                        }
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Doctor" asp-action="Index" class="btn btn-secondary" style="width:150px">
                            Back to list
                        </a>
                    </div>

                </div>

            </div>
            </div>
            <div class="col-2">
                <img src="@Model.Doctor.ImageUrl" width="100%"
                style="border-radius:6px; border:1px solid #bbb9b9"/>
            </div>
        </div>

</form>
@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />



    }
}