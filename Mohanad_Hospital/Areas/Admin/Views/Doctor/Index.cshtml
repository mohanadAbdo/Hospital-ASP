@model List<Doctor>

<div class="container">
    <div class = "row pt-4">
        <div class="col-6">
            <h2 class="tex-primary">
                Doctor List
            </h2>
        </div>        
        <div class="col-6 text-end">
            <a asp-controller="Doctor" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-patch-plus"></i>  Create New Doctor
            </a>
        </div>
    </div>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        
            <th>Doctor Name</th>
                <td>Category</td>

    
   </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
            {
        <tr>

                    <td>@obj.DoctorName</td>
                    <td></td>

            
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Doctor" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-fill"></i>Edit
                    </a>
                            <a asp-controller="Doctor" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3-fill"></i>Delete
                            </a>
                </div>

            </td>

        </tr>
            }
    </tbody>
</table>
</div>