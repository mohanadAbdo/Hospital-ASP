@model Appointment
<form method="post">
    <input hidden asp-for="DoctorId" />
    <div class="card container pt-4">

        <div class="card-body row container">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="card-header bg-primary text-light ml-0 row">
                        <div class="col-12 col-md-6">
                            <h1 class="text-white-50">@Model.Doctor.DoctorName</h1>
                            <p class="text-warning">Doctor ID: @Model.DoctorId</p>
                        </div>
                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img src="@Model.Doctor.ImageUrl" width="100%" class="rounded" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a class="btn btn-success form-control" style="height:50px;" asp-action="Index">Back to Home</a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <div class="form-group">
                        <label for="appointmentTime">Select Appointment Time:</label>
                        <select class="form-control" id="appointmentTime" name="appointmentTime">
                            <option value="9:00 AM">9:00 AM</option>
                            <option value="10:00 AM">10:00 AM</option>
                            <option value="11:00 AM">11:00 AM</option>
                            <!-- Add more time options as needed -->
                        </select>
                    </div>
                    <button type="submit" value="Doctor Appointment" class="btn btn-primary form-control" style="height:50px;">Doctor Appointment</button>
                </div>
            </div>
        </div>
    </div>
</form>
