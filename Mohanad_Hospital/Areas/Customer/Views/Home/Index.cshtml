@model IEnumerable<Doctor>
@using Microsoft.AspNetCore.Mvc.Localization

<h1>@_localization.Getkey("Hospital").Value</h1>
    <div class="row pb-3">
        
    @foreach (var doctor in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow  border-top border-5 rounded">
                        <img src="@doctor.ImageUrl" class="card-img-top rounded" />
                        <div class="pl-1">
                      <p class="card—title h5 text—dark opacity—75 text—uppercase text—center">@doctor.DoctorName</p>
                            <p class="card—title text—warning text—center">@doctor.Category.Name</p>
                        </div>
                    </div>
                    <a asp-action="Details"
                      asp-route-doctorId="@doctor.Id"
                    class="btn btn-primary bg-gradient border-0 form-control" >
                        @_localization.Getkey("Appointment").Value
                    </a> 
                </div>
            </div>
        </div>
    }
        </div>
        